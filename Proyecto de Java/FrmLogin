    private void btnIngresarActionPerformed(java.awt.event.ActionEvent evt) {                                            

        obtenerCredenciales();

        //Previo a comprobar roles
        boolean puedeEntrar = this.comprobarCredenciales();

        if (puedeEntrar) {

          FrmMenuPrincipal frmMenuPrincipal = new FrmMenuPrincipal();
          frmMenuPrincipal.setVisible(true);
          this.dispose();
          
        } else {
            JOptionPane.showMessageDialog(this, "Usuario no existe o contrase침a es incorrecta.");
        }

       

    }                                           

